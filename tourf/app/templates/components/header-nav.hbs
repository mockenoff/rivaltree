<figure>
	{{#link-to 'index'}}<img src="@@imagesURL/logo.png" />{{/link-to}}
	<figcaption>Elite Dodgeball</figcaption>
</figure>

{{#if (or-check (is-empty brackets) (equal pageState.routeName 'index'))}}
	<h2>Rivaltree</h2>
{{else}}
	{{#drop-down items=brackets isFiltered=true currentID=pageState.params.id stringFunction=bracketString keyID="id" filterKeys=filterKeys as |bracket|}}
		{{#if (equal bracket.id pageState.params.id)}}
			{{#link-to 'brackets' bracket.id tagName="li" class="current"}}
				{{bracket.title}}
			{{/link-to}}
		{{else}}
			{{#link-to 'brackets' bracket.id tagName="li"}}
				{{bracket.title}}
			{{/link-to}}
		{{/if}}
	{{/drop-down}}
{{/if}}

{{#if (is-not-empty userInfo.user)}}
	{{#drop-down items=menuOptions isFiltered=false currentID=pageState.params.id defaultItem="Settings" class="settings-dropdown" as |option|}}
		{{#link-to (array-at option 0) tagName="li"}}
			{{array-at option 1}}
		{{/link-to}}
	{{/drop-down}}
{{/if}}

{{yield}}
